<?xml version='1.0' encoding='utf-8'?>
<widget
  xmlns       = "http://www.w3.org/ns/widgets"
  xmlns:gap   = "http://phonegap.com/ns/1.0"
  id          = "com.imall"
  version     = "16.08.18"
  versionCode = "160818"
>
  <name>imall.com</name>
  <author
    href="http://imall.com"
    email="info@imall.com">iMall.com
  </author>
  <description>imall.com for android</description>
  <preference name="phonegap-version" value="cli-6.3.0"/>
  <preference name="fullscreen" value="true"/>
  <preference name="permissions" value="none"/>
  <feature    name="http://api.phonegap.com/1.0/file"/>

  <!--gap:plugin name="cordova-plugin-file"              source="npm" spec="4.2.0"/-->
  <gap:plugin name="cordova-plugin-globalization"     source="npm" spec="1.0.3"/>
  <gap:plugin name="cordova-plugin-inappbrowser"      source="npm" spec="1.4.0"/>
  <gap:plugin name="cordova-plugin-x-socialsharing"   source="npm" spec="5.1.1"/>
  <gap:plugin name="phonegap-plugin-push"             source="npm" spec="1.8.1">
    <param name="SENDER_ID" value="146697869257"/>
  </gap:plugin>
  <gap:plugin name="cordova-plugin-whitelist"         source="npm" spec="1.2.2"/>
  <access origin="*" launch-external="yes"/>
  <!--preference   name="android-build-tool" value="gradle"/-->
  <icon         src="icon.png" gap:platform="android" gap:qualifier="hdpi"/>
  <gap:splash   src="logo.png" gap:platform="android"/>
  <gap:platform name="android"/>
</widget>